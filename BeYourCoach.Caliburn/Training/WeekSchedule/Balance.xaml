<UserControl x:Class="BeYourCoach.Caliburn.Training.WeekSchedule.Balance"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BeYourCoach.Caliburn.Training.WeekSchedule"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="300">
   <ItemsControl Name="Trainings">
       <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <UniformGrid Rows="1"></UniformGrid>
            </ItemsPanelTemplate>
       </ItemsControl.ItemsPanel>
       <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Border Style="{StaticResource DisciplineBorderStyle}"></Border>
            </DataTemplate>
       </ItemsControl.ItemTemplate>
   </ItemsControl>
</UserControl>
